{
  "name": "shorter-url",
  "version": "1.0.0",
  "description": "A professional URL shortener application with Express backend and React frontend",
  "scripts": {
    "start": "node backend/src/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npm start",
    "build": "npm install && npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm install && npm run build",
    "build:backend": "cd backend && npm install",
    "heroku-postbuild": "npm run build"
  },
  "keywords": ["url-shortener", "bitly", "express", "react", "nodejs", "postgresql", "typescript"],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}